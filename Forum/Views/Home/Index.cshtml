@model Forum.Controllers.PostingList
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Index</h2>
@foreach (var posting in Model.Postings)
{
<a asp-controller="Topic" asp-action="Info" asp-route-Id="@posting.ID">
    <div>
        <h4>@posting.Title</h4>
    </div>
    <div class="posting-info">
        <p class="text-left">@posting.Poster</p>
        <p class="text-right">@posting.Posttime</p>
    </div>
</a>
}
